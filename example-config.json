  "alerts": [
    // An graphite alert
    {
      "name": "Memory",
      "query": "aliasByNode(collectd.*.memory.memory-free, 1)",
      "interval": "10minute",
      "format": "bytes",
      "rules": ["warning: < 300MB", "critical: > 200MB"]
    },
    // An ping alert
    {
      "name": "Site",
      // Source (graphite, url). By default: graphite
      "source": "url",
      "query": "http://google.com",
      "interval": "20second",
      "rules": ["critical: != 200"]
    }
  ]
}
