// Comments is allowed here
{
  "interval": "20minute",
  "logging": "debug",

  // Gmail example
  "smtp_username": "example@gmail.com",
  "smtp_password": "password",
  "smtp_use_tls": true,
  "smtp_host": "smtp.gmail.com",
  "smtp_port": 587,
  "smtp_from": "horneds@gmail.com",
  "smtp_to": ["horneds@gmail.com"],

  "debug": true,

  "alerts": [
    // An graphite alert
    {
      "name": "Memory",
      "query": "aliasByNode(*.memory.memory-free, 1)",
      "interval": "10minute",
      "format": "bytes",
      "rules": ["warning: < 300MB", "critical: < 200MB"]
    },
    // An ping alert
    {
      "name": "Site",
      // Source (graphite, url). By default: graphite
      "source": "url",
      "query": "http://google.com2",
      "interval": "20second",
      "rules": ["critical: != 200"]
    }
  ]
}
