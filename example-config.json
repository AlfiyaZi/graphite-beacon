// Comments is allowed here
{
  "interval": "10minute",
  "logging": "debug",

  "alerts": [
    // An graphite alert
    {
      "name": "Memory",
      "query": "aliasByNode(*.memory.memory-free, 1)",
      "interval": "10minute",
      "rules": [
        {
          "level": "critical",
          "operator": "gt",
          "value": 10000000
        }
      ]
    },
    // An ping alert
    {
      "name": "Site",
      // Source (graphite, url). By default: graphite
      "source": "url",
      "query": "http://google.com2",
      "interval": "20second",
      "rules": [
        {
          "level": "critical",
          "operator": "eq",
          "value": 500
        }
      ]
    }
  ]
}
